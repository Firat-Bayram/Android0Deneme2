<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/background"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context=".menu">

    <CheckBox
        android:id="@+id/chkDisplayName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Display Name" />

    <EditText
        android:id="@+id/edtName"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/chkDisplayName" />

    <Button
        android:id="@+id/btnSave"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="false"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/edtName"
        android:onClick="btnSaveOnClick"
        android:text="Gönder" />

    <ScrollView
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:layout_below="@+id/btnSave"
        android:layout_marginTop="25dp">

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:orientation="vertical">

            <Button
                android:id="@+id/btnSqlite"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:onClick="btnSqliteOnClick"
                android:text="Yeni Sayfa SQLLite" />

            <Button
                android:id="@+id/btnParalel"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:onClick="btnParalelOnClick"
                android:text="Paralel Çalıştır" />

            <Button
                android:id="@+id/btnTimer"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:onClick="btnTimerOnClick"
                android:text="Zamanlı Çalıştır" />

            <Button
                android:id="@+id/btnDialog"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:onClick="btnDialogOnClick"
                android:text="Dialog" />

            <Button
                android:id="@+id/btnShowListView"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:onClick="btnShowListViewOnClick"
                android:text="Göster ListView" />

            <Button
                android:id="@+id/btnSetBackground"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:onClick="btnSetBackgroundOnClick"
                android:text="Arkaplan Ayarlama" />

            <Button
                android:id="@+id/btnCustomView"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:onClick="btnCustomViewOnClick"
                android:text="Graphics via View" />

            <Button
                android:id="@+id/btnGraphicSurface"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:onClick="btnGraphicSurfaceOnClick"
                android:text="Graphics via SurfaceView" />

            <Button
                android:id="@+id/btnVideo"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:onClick="btnVideoOnClick"
                android:text="Video" />

            <Button
                android:id="@+id/btnInternalStore"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:onClick="btnInternalStoreOnClick"
                android:text="Internal Store" />

            <Button
                android:id="@+id/btnReadingData"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:onClick="btnReadingDataOnClick"
                android:text="Reading Data" />

            <Button
                android:id="@+id/btnSaveToSD"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:onClick="btnSaveToSDOnClick"
                android:text="Save to SD" />

            <Button
                android:id="@+id/btnRemoteDatabase"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:onClick="btnRemoteDatabaseOnClick"
                android:text="Remote database" />

        </LinearLayout>
    </ScrollView>
</RelativeLayout>
