<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context=".DialogActivity"
    android:background="@drawable/background">

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent">
        <ScrollView
            android:layout_width="fill_parent"
            android:layout_height="195dp">
            <LinearLayout
                android:orientation="vertical"
                android:layout_width="fill_parent"
                android:layout_height="fill_parent">
                <Button
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:text="Alert 1"
                    android:id="@+id/btnAlert1"
                    android:onClick="btnAlert1OnClick"/>

                <Button
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:text="Alert 2"
                    android:id="@+id/btnAlert2"
                    android:onClick="btnAlert2OnClick" />

                <Button
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:text="Alert 3"
                    android:id="@+id/btnAlert3"
                    android:onClick="btnAlert3OnClick" />

                <Button
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:text="Alert 4"
                    android:id="@+id/btnAlert4"
                    android:onClick="btnAlert4OnClick"/>

                <Button
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:text="Alert 5 (Progressing)"
                    android:id="@+id/btnAlert5"
                    android:onClick="btnAlert5OnClick"/>

                <Button
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:text="Alert 6"
                    android:id="@+id/btnAlert6"
                    android:onClick="btnAlert6OnClick"/>

                <Button
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:text="Alert 7 (Loading)"
                    android:id="@+id/btnAlert7"
                    android:onClick="btnAlert7OnClick"/>

                <Button
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:text="Custom Dialog 1"
                    android:id="@+id/btnCustomDialog1"
                    android:onClick="btnCustomDialog1OnClick"/>

                <Button
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:text="Custom Dialog 2"
                    android:id="@+id/btnCustomDialog2"
                    android:onClick="btnCustomDialog2OnClick" />

                <Button
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:text="Kullanıcı Girişi"
                    android:id="@+id/btnLoginUser"
                    android:onClick="btnLoginUserOnClick" />

                <Button
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:text="Custom Dialog 3"
                    android:id="@+id/btnCustomDialog3"
                    android:onClick="btnCustomDialog3OnClick" />

                <Button
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:text="Geriye Dönüş yapan dialog mesaj"
                    android:id="@+id/btnBackResultDialog"
                    android:onClick="btnBackResultDialogOnClick" />

            </LinearLayout>
        </ScrollView>
    </LinearLayout>
</RelativeLayout>
